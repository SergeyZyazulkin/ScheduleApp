<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/subject_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbAddSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:src="@drawable/ic_plus"
            android:visibility="gone"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_anchor="@id/subject_view"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="zsp.android.sa.element.ScrollAwareFABBehavior"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbSaveSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:src="@drawable/ic_anchor"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_anchor="@id/subject_view"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="zsp.android.sa.element.ScrollAwareFABBehavior"/>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>