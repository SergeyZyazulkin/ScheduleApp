<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/et_color"
                android:hint="Имя предмета"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>

            <EditText
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/et_color"
                android:hint="Время (HH:mm)"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProfessor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>

            <EditText
                android:id="@+id/etProfessor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/et_color"
                android:hint="Преподаватель"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCabinet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>

            <EditText
                android:id="@+id/etCabinet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/et_color"
                android:hint="Кабинет"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>

            <EditText
                android:id="@+id/etInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/et_color"
                android:hint="Описание"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Отмена"
                android:layout_gravity="left"/>

            <Button
                android:id="@+id/btSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:layout_toLeftOf="@id/btClose"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Добавить"
                android:layout_gravity="left"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>